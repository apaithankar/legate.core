#!/usr/bin/env bash

build_cpp_examples() {
    set -ex;

    conda deactivate

    cd $REPO_DIR/examples/cpp

    rm -rf build
    cmake -B build -S . -D legate_core_ROOT=../../build -D CMAKE_BUILD_TYPE=Debug
    cmake --build build -v -j 4

    (
    cd $REPO_DIR/examples/cpp/build;
    cpack -G TGZ;
    cp cpp_examples*.tar.gz /tmp/out/;
    );

    { set +x; } 2>/dev/null;
}

build_cpp_examples "$@";
